@{
    Layout = "~/Views/Shared/_SampleLayout.cshtml";
}

<head>
	<link rel="stylesheet" href="~/Content/scss/signup.css?v=1.0" />
</head>

<div class="container">
	<div class="content">
		<div class="left-bg"><img src="~/Content/Assets/left-bg.png" /></div>
		<div class="right-container">
			<div class="login-form">
				<img src="~/Content/Assets/Deskify Logo.png" />
				<h2 class="title">Create an Account</h2>
				<input type="email" placeholder="Enter your Email" required />
				<p class="text"><a href="#">Already have an account?</a></p>
				<div class="btns">
					<button class="nextBtn">Next</button>
				</div>
			</div>
		</div>
	</div>
</div>